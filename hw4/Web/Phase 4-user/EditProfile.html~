  <script>
  
  function mySubmitFunction(evt) {
  if (!phonenumber(document.getElementById('telnum')) || !nameCtrl(document.getElementById('frstname')) || !lastNameCtrl(document.getElementById('lstname'))){
  evt.preventDefault();
  }
}
  
  function phonenumber(inputtxt)
{
  let phoneno = /^(09)([0-9]{9})$/;
  if(inputtxt.value.match(phoneno) || (inputtxt.value == '') )
  {
      return true;
  }
  else
  {
     alert("Not a valid Phone Number");
     return false;
  }
}
  
  function nameCtrl(inputtxt)
{
  let phoneno = /^(?!.*[0-9]).*/;
  if(inputtxt.value.match(phoneno) || (inputtxt.value == ''))
  {
      return true;
  }
  else
  {
     alert("Not a valid name remove numbers");
     return false;
  }
}

  function lastNameCtrl(inputtxt)
{
 let phoneno = /^(?!.*[0-9]).*/;
  if(inputtxt.value.match(phoneno) || (inputtxt.value == ''))
  {
      return true;
  }
  else
  {
     alert("Not a valid last name remove numbers");
     return false;
  }
}
  
  
  
  </script>
