<script>
    function mySubmitFunction(evt) {
  if (!notempty(document.getElementById('note'))){
  evt.preventDefault();
  }
  }
  
  function notempty(inputtxt)
{
  let phoneno = /^$|s+/;
  if(inputtxt.value.match(phoneno) || (inputtxt.value == '') )
  {
      alert("Not a valid Charge Amount");
      return false;
  }
  else
  {
     
     return true;
  }
}
}
</script> 
